{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "client",
  "version": "0.1.0",
  "identifier": "com.akumanoko.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build/client"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "hiddenTitle": true,
        "width": 800,
        "height": 600,
        "minWidth": 600,
        "minHeight": 460,
        "titleBarStyle": "Overlay",
        "resizable": true,
        "transparent": true,
        "decorations": true,
        "windowEffects": {
          "effects": [
            "hudWindow"
          ],
          "state": "followsWindowActiveState"
        },
        "trafficLightPosition": {
          "x": 18,
          "y": 24
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
